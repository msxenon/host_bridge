{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start host_bridge",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/start_host_bridge.sh",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "host_bridge",
                "pattern": {
                    "regexp": "^.*(Listening on http://[^:]+:\\d+).*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Listening on port|Connect at http://"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "showReuseMessage": false,
                "echo": true
            }
        },
        {
            "label": "Stop host_bridge",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/stop_host_bridge.sh",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        }
    ]
}